    <mesh file="right_shoulder_yaw.STL" name="right_shoulder_yaw"/>
    <mesh file="right_elbow_pitch.STL" name="right_elbow_pitch"/>

    <mesh file="ankle_pitch.STL" name="ankle_pitch"/>
  </asset>

